@model IEnumerable<mvcbuilder.Models.Base.module>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nameModule)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.defaultHtml)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.defaultCss)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.urlModule)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nameModule)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.defaultHtml)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.defaultCss)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.urlModule)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idModule }) |
            @Html.ActionLink("Details", "Details", new { id=item.idModule }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idModule })
        </td>
    </tr>
}

</table>
