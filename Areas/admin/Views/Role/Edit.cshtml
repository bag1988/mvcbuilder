@using mvcbuilder.Models
@model mvcbuilder.Areas.Admin.Data.RoleEditModel
@{
    ViewBag.Title = "Изменить роль";
}
        <h2>Изменить роль</h2>
<hr />
        @Html.ValidationSummary()
        @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="roleName" value="@Model.Role.Name" />           
                <h3>Добавить в роль <b>@Model.Role.Name</b></h3>
                <hr />
            if (Model.NonMembers.Count() == 0)
            {
                <div class="row">Все пользователи в роли</div>
                }
                else
                {
                <div class="row">
                    <div class="col-md-6">
                        User ID
                    </div>
                    <div class="col-md-6">
                        Добавить в роль
                    </div>
                   
                </div>
                <hr />
                foreach (ApplicationUser user in Model.NonMembers)
                {
                        <div class="row">
                            <div class="col-md-6">
                                @user.UserName
                            </div>
                            <div class="col-md-6">
                                <input type="checkbox" name="IdsToAdd" value="@user.Id">
                            </div>
                        </div>
                    }
                }
            <br/>
                <h3> Удалить из роли <b>@Model.Role.Name</b></h3>
                <hr/>
                    if (Model.Members.Count() == 0)
                    {
                        <div class="row"> Нет пользователей в роли</div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6 ">
                                <b>User ID</b>
                            </div>
                            <div class="col-md-6">
                                <b>Удалить из роли</b>
                            </div>                            
                        </div>
                        <hr />
                foreach (ApplicationUser user in Model.Members)
                {
                            <div class="row">
                                <div class="col-md-6">
                                    @user.UserName
                                </div>
                                <div class="col-md-6">
                                    <input type="checkbox" name="IdsToDelete" value="@user.Id">
                                </div>
                            </div>
                            <br/>
                        }
                    }
            <button type="submit" class="btn btn-success">Сохранить</button>
            @Html.ActionLink("Отмена", "Index", null, new { @class = "btn btn-default" })
        }
   